<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ScreenMarquee"
        x:Class="ScreenMarquee.MainWindow"
        Title="MainWindow"
        Height="100"
        WindowStyle="None"
        Topmost="True"
        AllowsTransparency="True"
        Background="#66000000">
    <Window.Resources>
        <local:LeftMarginFormatter x:Key="LeftMarginFormatter" />
    </Window.Resources>
    <Grid>
        <Label x:Name="Label"
               Content="{Binding Text}"
               Margin="{Binding Value, Converter={StaticResource LeftMarginFormatter}}"
               FontSize="64"
               Foreground="White"
               HorizontalAlignment="Left">
            <Label.Effect>
                <DropShadowEffect ShadowDepth="0"
                                  BlurRadius="20" />
            </Label.Effect>
        </Label>
    </Grid>
</Window>
